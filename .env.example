# Water Billing System Environment Configuration
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here-generate-a-random-string

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
DATABASE_NAME=water_billing

# SMS Configuration (TalkSASA)
TALKSASA_API_KEY=your-talksasa-api-key
TALKSASA_SENDER_ID=TALKSASA

# M-Pesa Configuration
MPESA_CONSUMER_KEY=your-mpesa-consumer-key
MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret
MPESA_SHORTCODE=your-mpesa-shortcode
MPESA_PASSKEY=your-mpesa-passkey
MPESA_ENV=sandbox

# Application Settings
RATE_PER_UNIT=100
DEFAULT_PER_PAGE=10

# URL Shortening (Optional)
BITLY_ACCESS_TOKEN=your-bitly-token
ENABLE_URL_SHORTENING=true

# Encryption (Optional - will auto-generate if not provided)
ENCRYPTION_SECRET_KEY=your-encryption-key